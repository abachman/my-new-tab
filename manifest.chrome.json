{
  "manifest_version": 2,

  "name":       "My New Tab",
  "short_name": "My New Tab",
  "description": "My New Tab is the simplest and safest custom new tab page replacement. No frills, no ads, your links and information belong to you.",
  "version": "1.4.0",

  "author": "Adam Bachman",
  "homepage_url": "https://github.com/abachman/my-new-tab",

  "icons": {
    "128": "icon.png"
  },

  "chrome_url_overrides" : {
    "newtab": "index.html"
  },

  "web_accessible_resources": [ "static/*" ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",

  "sandbox": {
    "pages": ["userscript.html"]
  },

  "incognito": "not_allowed",
  "permissions": [ "storage" ]
}

