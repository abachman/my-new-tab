{
  "manifest_version": 2,

  "name":       "My New Tab",
  "short_name": "My New Tab",
  "description": "My New Tab is the simplest and safest custom new tab page replacement. No frills, no ads, your links and information belong to you.",
  "version": "1.2.0",

  "icons": {
    "128": "icon.png"
  },

  "author": "Adam Bachman",
  "homepage_url": "https://github.com/abachman/my-new-tab",

  "chrome_url_overrides" : {
    "newtab": "index.html"
  },

  "web_accessible_resources": [
    "static/*"
  ],

  "sandbox": {
    "pages": ["userscript.html"]
  },

  "incognito": "split",
  "permissions": [
    "storage"
  ]
}

